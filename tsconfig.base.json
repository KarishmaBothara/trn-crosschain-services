{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "target": "es2020",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@trncs/ebd/*": ["./apps/ebd/src/*"],
      "@trncs/xbd/*": ["./apps/xbd/src/*"],
      "@trncs/xls20d/*": ["./apps/xls20d/src/*"],
      "@trncs/balance-checker/*": ["./apps/balance-checker/*"],
      "@trncs/specs/*": ["./packages/specs/src/*"],
      "@trncs/utils/*": ["./packages/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
